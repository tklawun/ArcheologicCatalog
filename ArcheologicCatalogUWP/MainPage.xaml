<Page
    x:Class="ArcheologicCatalogUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ArcheologicCatalogUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <GridView Margin="120,120,120,120">
            <Button x:Name="GetToDetailView" Content="Go to Detail View" Click="GetToDetailView_Click" />
            <Button x:Name="GetToListView" Content="Go to List View"  Click="GetToListView_Click" />
            <TextBlock Text="TextBlock" TextWrapping="Wrap" Width="186" x:Name="startDir" ScrollViewer.HorizontalScrollMode="Enabled" Height="36">
                  <ToolTipService.ToolTip>
                        <ToolTip Content="Offset ToolTip." VerticalOffset="-80" x:Name="startDirToolTip"/>
                   </ToolTipService.ToolTip>
            </TextBlock>
        </GridView>
    </Grid>
</Page>
